    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_16dp"
    android:orientation="vertical"
    android:paddingEnd="@dimen/_100dp">

    <TextView
        android:id="@+id/response_text"
        android:layout_width="match_parent"
